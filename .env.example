# =============================================================================
# ON1Builder Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# =============================================================================

# Blockchain RPC Endpoints
# Get these from Infura (https://infura.io) or Alchemy (https://alchemy.com)
INFURA_PROJECT_ID=your_infura_project_id_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Alternative RPC endpoints (optional)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/${INFURA_PROJECT_ID}

# Wallet Configuration
# ⚠️  NEVER use real private keys in development!
# ⚠️  Use test keys and testnets for development
# ⚠️  Keep private keys secure and never commit them
WALLET_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_ADDRESS=0x742d35Cc6635C0532925a3b8D8b5A8b3F3C4C7c6

# Market Data API Keys (optional but recommended)
# CoinMarketCap: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# CoinGecko: https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# Price Data APIs (optional)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here
NOMICS_API_KEY=your_nomics_api_key_here

# Blockchain Explorer APIs (optional)
# Etherscan: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Database Configuration (optional)
# For persistent storage of transactions and metrics
DATABASE_URL=sqlite:///on1builder.db
# DATABASE_URL=postgresql://user:password@localhost:5432/on1builder

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/on1builder.log

# Application Settings
DEBUG=false
METRICS_ENABLED=true
MONITORING_ENABLED=true
NOTIFICATIONS_ENABLED=true

# Performance Settings
MAX_CONCURRENT_TRANSACTIONS=10
TRANSACTION_TIMEOUT=30
GAS_PRICE_MULTIPLIER=1.1
MAX_GAS_PRICE_GWEI=100

# Safety Settings
ENABLE_SAFETY_GUARDS=true
MAX_TRANSACTION_VALUE_ETH=1.0
MIN_WALLET_BALANCE_ETH=0.1
CIRCUIT_BREAKER_ENABLED=true

# Development Settings
ENABLE_TESTNET=true
TESTNET_CHAIN_ID=5  # Goerli
USE_FLASHBOTS=false
DRY_RUN_MODE=false

# Notification Settings (optional)
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord webhook for notifications  
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourcompany.com

# External Service Timeouts (seconds)
HTTP_TIMEOUT=30
WEBSOCKET_TIMEOUT=60
RPC_TIMEOUT=10

# Cache Settings
CACHE_TTL=300  # 5 minutes
PRICE_CACHE_TTL=60  # 1 minute
NONCE_CACHE_TTL=30  # 30 seconds

# =============================================================================
# Development vs Production Settings
# =============================================================================
# For development, use:
# - Testnets (Goerli, Sepolia, Mumbai)
# - Test private keys
# - Lower gas limits and prices
# - DEBUG=true

# For production, use:
# - Mainnets
# - Secure key management (hardware wallets, HSM)
# - Appropriate gas settings
# - DEBUG=false
# - Monitoring and alerting enabled
# =============================================================================
